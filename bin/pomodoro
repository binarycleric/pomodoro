#!/usr/bin/env ruby

require './lib/pomodoro'
require 'thin'

rackup_file = "./lib/pomodoro/config.ru"
 
argv = ARGV
argv << ["-R", rackup_file] unless ARGV.include?("-R")
argv << ["-p", "80"] unless ARGV.include?("-p")
argv << ["-e", "production"] unless ARGV.include?("-e")
Thin::Runner.new(argv.flatten).run!
